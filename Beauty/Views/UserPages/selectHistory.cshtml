<html lang="en">
<head>
    <style>
        .font-weight-normal {
            font-weight: 400 !important;
        }

        .mr-md-auto, .mx-md-auto {
            margin-right: auto !important;
        }

        .d-flex {
            display: flex !important;
        }

        .container {
            width: 100%;
            padding-right: 15px;
            padding-left: 15px;
            margin-right: auto;
            margin-left: auto;
        }

        div {
            display: block;
        }

        .st {
            display: flex !important;
            flex-direction: row !important;
        }

        .my-bg {
            background-color: #F1CFCD !important;
        }

        .btn-primary {
            background-color: #DB7093 !important;
            border-color: #FF69B4 !important;
        }

        body {
            font-family: 'Muli', sans-serif;
            background: #ECDFD7 !important;
        }
    </style>
    <script src="~/lib/sweetalert.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <link rel="stylesheet" href="~/css/bootstrap.min.css" type="text/css" />
    <script src="/js/site.js"></script>
</head>
<body>
    <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3  border-bottom box-shadow">
        <h5 class="my-0 mr-md-auto font-weight-normal">Beauty</h5>
        <nav class="my-2 my-md-0 mr-md-3">
            <a class="btn btn-outline-secondary rounded-pill" asp-controller="UserPages" asp-action="UserHomePage">Главная</a>
            <a class="btn btn-secondary rounded-pill" asp-controller="UserPages" asp-action="selectHistory">Записи</a>
            <a class="btn btn-outline-secondary rounded-pill" asp-controller="UserPages" asp-action="selectUserInfo">Профиль</a>
            <a class="btn btn-outline-secondary rounded-pill" asp-controller="UserPages" asp-action="Signout">Выйти</a>
        </nav>
    </div>


    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3" id="result" style="margin:30px;">
        @foreach (var history in Model)
        {
            <div class="col">
                <div class="card border-light rounded-3 my-bg ">
                    <div class="card-header my-bg text-black">
                        @history.SubcategoryName
                    </div>
                    <div class="card-body">
                        <p class="card-text">@history.FirstName @history.LastName</p>
                        <p class="card-text">Номер телефона: @history.PhoneNumber</p>
                        <p class="card-text">Дата: @history.Date в @history.Time</p>
                        <p class="card-text">Цена: @history.Price рублей</p>
                        <p class="card-text">Адрес:@history.City, @history.Street @history.House</p>
                        <p class="card-text">Статус: @history.Status</p>
                        <form id="cancel" asp-controller="UserPages" asp-action="cancelEntry">
                            <input style="visibility: hidden; width:0px; height:0px;" name="serviceid" id="serviceid" value="@history.ServId" />
                            <input style="visibility: hidden; width:0px; height:0px;" name="masid" id="masid" value="@history.MasterInfoId" />
                            <input style="visibility: hidden; width:0px; height:0px;" name="date" id="date" value="@history.Date" />
                            <input style="visibility: hidden; width:0px; height:0px;" name="time" id="time" value="@history.Time" />
                            <input type="button" class="btn btn-outline-secondary rounded-pill" onclick="Cancel()" value="Отменить запись" style=" margin-left: 55px;" />
                        </form>
                    </div>
                </div>
            </div>
         }
    </div>
</body>
</html>