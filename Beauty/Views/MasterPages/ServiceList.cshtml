<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        .form-signin {
            width: 100%;
            max-width: 330px;
            padding: 15px;
            margin: auto;
        }

        .body {
            background: url(~/img//back.jpeg);
            background-attachment: fixed;
            background-size: 100% 100%;
        }

        .font-weight-normal {
            font-weight: 400 !important;
        }

        .mr-md-auto, .mx-md-auto {
            margin-right: auto !important;
        }

        .d-flex {
            display: flex !important;
        }

        .container {
            width: 100%;
            padding-right: 15px;
            padding-left: 15px;
            margin-right: auto;
            margin-left: auto;
        }

        div {
            display: block;
        }

        body {
            font-family: 'Muli', sans-serif;
            background: #ECDFD7 !important;
        }

        .my-bg {
            background-color: #F1CFCD !important;
        }
    </style>
    <script src="~/lib/sweetalert.min.js"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="/js/site.js"></script>
    <link rel="stylesheet" href="~/css/bootstrap.min.css" type="text/css" />


</head>
<body>
    <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3  border-bottom box-shadow">
        <h5 class="my-0 mr-md-auto font-weight-normal">Beauty</h5>
        <nav class="my-2 my-md-0 mr-md-3">
            <a class="btn btn-outline-secondary rounded-pill" asp-controller="MasterPages" asp-action="HomePage">Главная</a>
            <a class="btn btn-outline-secondary rounded-pill" asp-controller="MasterPages" asp-action="CreateNewService">Добавить услугу</a>
            <a class="btn btn-outline-secondary rounded-pill" asp-controller="MasterPages" asp-action="addShedul">Добавить расписание</a>
            <a class="btn btn-outline-secondary rounded-pill" asp-controller="MasterPages" asp-action="addPhoto">Добавить фото</a>
            <a class="btn btn-secondary rounded-pill" asp-controller="MasterPages" asp-action="ServiceList">Мои услуги</a>
            <a class="btn btn-outline-secondary rounded-pill" asp-controller="MasterPages" asp-action="selectHistory">Записи</a>
            <a class="btn btn-outline-secondary rounded-pill" asp-controller="MasterPages" asp-action="selectMasterInfo">Профиль</a>
            <a class="btn btn-outline-secondary rounded-pill" asp-controller="MasterPages" asp-action="Signout">Выйти</a>
        </nav>
    </div>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3" id="result" style="margin: 30px;">
        @foreach (var info in Model)
        {
            <div class="col">
                <div class="card border-light rounded-3 my-bg ">
                    <div class="card-header my-bg text-black">
                        @info.ServiceName
                    </div>
                    <div class="card-body">
                        <p class="card-text">Цена: @info.Price рублей</p>
                        <p class="card-text">Описание: @info.Discription</p>
                        <input style="visibility: hidden; width:0px; height:0px;" name="id" id="id" value="@info.Id" />
                        <button class="btn btn-outline-secondary rounded-pill" type="button" onclick="DelService()">Удалить</button>
                    </div>
                </div>

            </div>
        }
    </div>
</body>
</html>

